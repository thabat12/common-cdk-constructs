{
  "name": "@thabat12/cdk-fargate-scaffold",
  "version": "1.0.0",
  "description": "Production-ready CDK scaffold for rapid Fargate deployments",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && tsc",
    "watch": "tsc -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:constructs": "jest --testPathPattern=constructs",
    "test:stacks": "jest --testPathPattern=stacks",
    "test:snapshots": "jest --updateSnapshot",
    "cdk": "cdk",
    "deploy": "npm run build && cdk deploy --all",
    "deploy:dev": "npm run build && cdk deploy --all --context environment=dev",
    "deploy:staging": "npm run build && cdk deploy --all --context environment=staging",
    "deploy:production": "npm run build && cdk deploy --all --context environment=production",
    "diff": "npm run build && cdk diff",
    "synth": "npm run build && cdk synth",
    "synth:dev": "npm run build && cdk synth --context environment=dev",
    "synth:staging": "npm run build && cdk synth --context environment=staging",
    "synth:production": "npm run build && cdk synth --context environment=production",
    "destroy": "cdk destroy --all",
    "bootstrap": "cdk bootstrap",
    "cost:estimate": "npm run build && cdk diff --context environment=production",
    "cost:current": "aws ce get-cost-and-usage --time-period Start=2024-01-01,End=2024-12-31 --granularity MONTHLY --metrics BlendedCost",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint --fix . --ext .ts",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test && npm run lint && npm run build",
    "validate": "npm run lint && npm run format:check && npm run test && npm run build",
    "example:create": "node scripts/create-example.js",
    "example:deploy": "cd examples/generated && npm run deploy"
  },
  "keywords": [
    "aws",
    "cdk",
    "fargate",
    "ecs",
    "docker",
    "infrastructure",
    "scaffold",
    "typescript",
    "constructs",
    "deployment",
    "automation"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thabat12/common-cdk-constructs.git"
  },
  "bugs": {
    "url": "https://github.com/thabat12/common-cdk-constructs/issues"
  },
  "homepage": "https://github.com/thabat12/common-cdk-constructs#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "aws-cdk": "^2.100.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.0.0",
    "eslint-plugin-jest": "^27.0.0",
    "husky": "^8.0.0",
    "jest": "^29.5.0",
    "lint-staged": "^14.0.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typescript": "~5.0.0"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.100.0",
    "constructs": "^10.0.0",
    "source-map-support": "^0.5.21",
    "dotenv": "^16.3.1"
  },
  "peerDependencies": {
    "aws-cdk-lib": "^2.100.0",
    "constructs": "^10.0.0"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
